<Page x:Class="WorkersProject.WorkersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkersProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkersPage">

    <StackPanel>
        <TextBlock Text="Lista pracowników"/>
        
        <ListView ItemsSource="{Binding WorkersListView}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:WorkerControl/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="Dodaj" Command="{Binding SwapTextCommand}"/>
    </StackPanel>
</Page>
